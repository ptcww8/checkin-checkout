<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
			<th>Year</th>
			<th>Month</th>
			<th>Date</th>
			<th>Day</th>
      <th>Time in</th>
      <th>Time out</th>
			<th>Duration(mins)</th>
    </tr>
  </thead>

  <tbody>
    <% @timers.each do |timer| %>
      <tr>
				<td><%= timer.time_in.strftime("%Y") %></td>
				<td><%= timer.time_in.strftime("%B") %></td>
				<td><%= timer.time_in.strftime("%e") %></td>
				<td><%= timer.time_in.strftime("%A") %></td>
        <td><%= timer.time_in.strftime("%I:%M%p") %></td>
        <td><%= timer.time_out.strftime("%I:%M%p") if timer.time_out %></td>
				<td><%= ((timer.time_out - timer.time_in)/1.minute).round if timer.time_out %></td>
      </tr>
    <% end %>
  </tbody>
</table>